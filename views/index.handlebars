<div class="container">
  <h1 class="top">Todo List</h1>
  <form action="/add" method="post">
    <input class="enterNew" type="text" name="newTask" value="" placeholder="Enter new task" required>
    <input class="addNew" type="submit" name="" value="Add">
  </form>

  <ul class="chores">
    {{#each todos}}
        <li>
          {{task}}
          <form class="listForm" action="/completed/{{id}}" method="post">
            <button class="compButton" type="submit" name="done" value="{{task}}">Complete</button>
            <button type="button"><a class="edit-button" href="/edit/{{id}}">Edit</a></button>
          </form>
        </li>
    {{/each}}
  </ul>
  <hr>


</div>
